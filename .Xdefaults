# fonts
# =====
#URxvt*font: xft:Monospace:pixelsize=18
#URxvt*font: xft:Monospace:pixelsize=14
URxvt*font:xft:Inconsolata:pixelsize=18:antialias=true:hinting=true
# dont use bold font?
#URxvt*boldFont: xft:Monospace:pixelsize=18
#URxvt*boldFont: xft:Monospace:pixelsize=18
URxvt*boldFont: xft:Inconsolata:pixelsize=18:antialias=true:bold:hinting=true
#URxvt*letterSpace: -1


# try this ones

#URxvt.font: xft:Monaco:pixelsize=18:autohint=true, xft:LiHei Pro:pixelsize=18:autohint=true
#URxvt.boldFont: xft:Monaco:bold:pixelsize=18:autohint=true, xft:LiHei Pro:pixelsize=18:autohint=true
#URxvt.italicFont: xft:Monaco:italic:pixelsize=18:autohint=true, xft:LiHei Pro:italic:pixelsize=18:autohint=true


# with this set to true, when an app sends a bell to the terminal, awesome hilights the appropriate tag(s) ;)
URxvt*urgentOnBell: true

# these three lines enable clicking on links to open them ;)
## if you want to enable tab support, append ,tabbed to the next line
## then use shift+down arrow to create tabs and shift+{left,right} arrows to switch between them
URxvt.iso14755: False
URxvt*perl-ext-common: default,clipboard,fullscreen, matcher,-option-popup,-selection-popup,-realine
URxvt.keysym.F11: perl:fullscreen:switch
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

URxvt*matcher.button: 1
# don't forget to change this to your favorite browser
URxvt*urlLauncher: chromium

#
# - For screen/tmux. (\001 is C-a.)
#
URxvt.keysym.M-Left: \001p
URxvt.keysym.M-Right: \001n
URxvt.secondaryScroll: true

URxvt.clipboard.autocopy: true

