URxvt*loginShell:true
URxvt.termName: rxvt-unicode-256color
URxvt*transparent:true
URxvt*shading:5
#URxvt*background:Black
#URxvt*foreground:White
URxvt*scrollBar:true
URxvt*scrollBar_right:true
URxvt*scrollBar_floating:false
URxvt*scrollstyle:plain
URxvt*secondaryScroll:true

# how many lines you want it to save per session
URxvt*saveLines:32767
URxvt*troughColor:#000000
URxvt*scrollColor:#222222
#URxvt*font: xft:Dejavu Sans Mono:pixelsize=11


#
# - Custom default window size.
#
URxvt.geometry: 100x24


# Color https://github.com/chusiang/tuxENV/blob/master/_Xdefaults
# ========
#
# - Text/Font color (default is black).
URxvt.foreground: #FFFFFF
#
# - Background color (prior to tinting) (default is white).
URxvt.background: #000000
#
# UnderLine
#URxvt.underlineColor: #cc0000
#
# - URLs color
URxvt.colorUL: #7f7f7f
#
# - Scheme: Ambience
#
# Black.
URxvt.color0: #000000
URxvt.color8: #AAAAAA
#
# Red.
URxvt.color1: #cc0000
URxvt.color9: #ef2929
#
# Green.
URxvt.color2: #4E9A06
URxvt.color10: #8AE234
#
# Yellow.
URxvt.color3: #C4A000
URxvt.color11: #FCE94F
#
# Blue.
URxvt.color4: #3465A4
URxvt.color12: #729FCF
#
# Magenta.
URxvt.color5: #75507B
URxvt.color13: #AD7FA8
#
# Cyan.
URxvt.color6: #06989A
URxvt.color14: #34E2E2
#
# White.
URxvt.color7: #D3D7CF
URxvt.color15: #EEEEEC


